            { text: "Y conoceréis la verdad, y la verdad os hará libres.", reference: "Juan 8:32" },
            { text: "No nos cansemos, pues, de hacer bien; porque a su tiempo segaremos, si no desmayamos.", reference: "Gálatas 6:9" },
            { text: "Porque yo sé los pensamientos que tengo acerca de vosotros, dice Jehová, pensamientos de paz, y no de mal, para daros el fin que esperáis.", reference: "Jeremías 29:11" },
            { text: "Jehová te bendiga, y te guarde; Jehová haga resplandecer su rostro sobre ti, y tenga de ti misericordia; Jehová alce sobre ti su rostro, y ponga en ti paz.", reference: "Números 6:24-26" }
        ];

        // Variables globales
        let audioPlayer;
        let timerInterval;
        let timeLeft = 6 * 60 * 60; // 6 horas en segundos
        let isPlaying = false;

        // Cuando el documento esté cargado
        document.addEventListener('DOMContentLoaded', function() {
            // Actualizar contador de versículos
            document.getElementById('verseCount').textContent = bibleVerses.length;
            
            // Mostrar versículos iniciales
            displayRandomVerses();
            
            // Configurar controles de música
            setupAudioPlayer();
            
            // Configurar temporizador
            setupTimer();
            
            // Configurar botón de renovación manual
            document.getElementById('refreshBtn').addEventListener('click', function() {
                refreshVerses();
            });
            
            // Configurar controles de música
            document.getElementById('playBtn').addEventListener('click', function() {
                playMusic();
            });
            
            document.getElementById('pauseBtn').addEventListener('click', function() {
                pauseMusic();
            });
            
            document.getElementById('volumeSlider').addEventListener('input', function() {
                if (audioPlayer) {
                    audioPlayer.volume = this.value / 100;
                }
            });
        });

        // Función para mostrar versículos aleatorios
        function displayRandomVerses() {
            // Ocultar loading
            document.getElementById('loading').style.display = 'none';
            
            // Obtener 3 índices aleatorios únicos
            const indices = [];
            while (indices.length < 3) {
                const randomIndex = Math.floor(Math.random() * bibleVerses.length);
                if (!indices.includes(randomIndex)) {
                    indices.push(randomIndex);
                }
            }
            
            // Mostrar los versículos seleccionados
            for (let i = 0; i < 3; i++) {
                const verse = bibleVerses[indices[i]];
                const verseCard = document.getElementById(`verse${i+1}`);
                verseCard.querySelector('.verse-text').textContent = verse.text;
                verseCard.querySelector('.verse-reference').textContent = verse.reference;
            }
        }

        // Función para configurar el reproductor de audio
        function setupAudioPlayer() {
            // Crear elemento de audio con música instrumental de fondo
            audioPlayer = new Audio('https://assets.mixkit.co/music/preview/mixkit-his-mercy-is-more-1005.mp3');
            audioPlayer.loop = true;
            audioPlayer.volume = 0.5;
            
            // Actualizar información de la música
            document.querySelector('.music-info').textContent = 'Música: "His Mercy Is More" - Instrumental';
        }

        // Función para reproducir música
        function playMusic() {
            if (audioPlayer && !isPlaying) {
                audioPlayer.play()
                    .then(() => {
                        isPlaying = true;
                        document.getElementById('playBtn').classList.add('pulse');
                        document.getElementById('pauseBtn').classList.remove('pulse');
                    })
                    .catch(error => {
                        console.log('Error al reproducir audio:', error);
                        alert('Para reproducir la música, por favor interactúa con la página primero (haz clic en cualquier lugar).');
                    });
            }
        }

        // Función para pausar música
